{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false
  },
}
